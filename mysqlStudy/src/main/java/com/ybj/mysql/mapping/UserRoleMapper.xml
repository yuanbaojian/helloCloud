<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ybj.mysql.dao.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ybj.mysql.model.UserRole">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, role_id
    </sql>
    <select id="getUserRoleByIn" resultMap="BaseResultMap">
        select t1.* from tbl_user_role t1 where t1.user_id in (select id from tbl_user)
    </select>

    <select id="getUserRoleByExist" resultMap="BaseResultMap">
        select t1.* from tbl_user_role t1 where exists (select t2.* from tbl_user t2 where t1.user_id =  t2.id)
    </select>

</mapper>
